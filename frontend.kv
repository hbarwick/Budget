<LogonScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            source: 'Resources\LogonScreenImage.png'
            size_hint_y: 0.7
        TextInput:
            id: username
            size_hint_y: 0.1
        TextInput:
            id: password
            size_hint_y: 0.1
        Button:
            text: 'Click to Logon'
            size_hint_y: 0.1
            on_press: root.logon_button()

<MainMenu>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Label:
            text: 'Main Menu'
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            Label:
                text: 'Total spend this month'
                size_hint_y: 0.1
            Label:
                text: '£2395:'
                size_hint_y: 0.1
            Label:
                text: 'Total Bills:'
                size_hint_y: 0.1
            Label:
                text: '£9681'
                size_hint_y: 0.1
            Label:
                text: 'Funds Remaining:'
                size_hint_y: 0.1
            Label:
                text: '£23'
                size_hint_y: 0.1
            Button:
                text: 'Enter Payment'
                size_hint_y: 0.1
                on_press:
            Button:
                text: 'Enter Bill'
                size_hint_y: 0.1
                on_press:
            Button:
                text: 'Amend Bills'
                size_hint_y: 0.1
                on_press:
            Button:
                text: 'Amend Incomes'
                size_hint_y: 0.1
                on_press:
        Button:
            text: 'Review Spending'
            size_hint_y: 0.1
            on_press: root.logout_button()

<EnterPayment>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Label:
            text: "Enter New Payment"
        TextInput:
            id: username
            size_hint_y: 0.1
        TextInput:
            id: password
            size_hint_y: 0.1
        Button:
            text: 'Click to Logon'
            size_hint_y: 0.1
            on_press: root.logon_button()

<RootWidget>:
    LogonScreen:
        id: logon_screen
        name: 'logon_screen'
    MainMenu:
        id: main_menu
        name: 'main_menu'