<LogonScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            source: 'Resources\LogonScreenImage.png'
            size_hint_y: 0.7
        Button:
            id: newuser
            text: 'Sign up for new account'
            size_hint_y: 0.1
            on_press: root.new_user_button()
        TextInput:
            id: username
            hint_text: "Username"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: password
            hint_text: "Password"
            password: True
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        Button:
            text: 'Click to Logon'
            size_hint_y: 0.1
            on_press: root.logon_button()

<NewUserScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        TextInput:
            id: username
            hint_text: "Username"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: email
            hint_text: "Email Address"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: first_name
            hint_text: "First Name"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: last_name
            hint_text: "Last Name"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: password
            hint_text: "Password"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
            password: True
        TextInput:
            id: confirm_password
            hint_text: "Confirm Password"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
            password: True
        GridLayout:
            cols: 2
            size_hint_y: 0.2
            Button:
                text: 'Submit'
                size_hint_y: 0.1
                on_press: root.usercheck()
            Button:
                text: 'Cancel'
                size_hint_y: 0.1
                on_press: root.cancel()


<PaymentScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Label:
            text: "Enter New Payment"
        TextInput:
            id: value
            hint_text: "Payment Value"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: category
            hint_text: "Category of payment"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: extra_details
            hint_text: "Extra Details"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.2
            font_size: 30
        Button:
            text: 'Click to submit'
            size_hint_y: 0.1
            on_press: root.submit_payment()

<IncomeScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Label:
            text: "Enter New Income"
        TextInput:
            id: value
            hint_text: "Income Value"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        TextInput:
            id: income_name
            hint_text: "Income Description"
            halign: "center"
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            size_hint_y: 0.1
            font_size: 30
        ToggleButton:
            id: recurring
            text: "Recurring"
            state: "down"
            group: recurring
            halign: "center"
            size_hint_y: 0.2
            font_size: 30
        ToggleButton:
            id: oneoff
            text: "One off"
            group: recurring
            halign: "center"
            size_hint_y: 0.2
            font_size: 30
        Button:
            text: 'Click to submit'
            size_hint_y: 0.1
            on_press: root.submit_income()

<RootWidget>:
    LogonScreen:
        id: logon_screen
        name: 'logon_screen'
    NewUserScreen:
        id: new_user_screen
        name: 'new_user_screen'
    MainMenu:
        id: main_menu
        name: 'main_menu'
    PaymentScreen:
        id: payment_screen
        name: 'payment_screen'
    BillScreen:
        id: bill_screen
        name: 'bill_screen'
    IncomeScreen:
        id: income_screen
        name: 'income_screen'