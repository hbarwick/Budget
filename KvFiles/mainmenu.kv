<MainMenu>
    on_enter: root.update_summary_totals()
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Label:
            text: 'Welcome ' + root.manager.current_user + "!"'\n\n  Main Menu'
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            Label:
                text: 'Total Income'
                size_hint_y: 0.1
            Label:
                id: total_income
                text: ""
                size_hint_y: 0.1
            Label:
                text: 'Total spend this month'
                size_hint_y: 0.1
            Label:
                id: total_spend
                text: ""
                size_hint_y: 0.1
            Label:
                text: 'Total Bills:'
                size_hint_y: 0.1
            Label:
                id: total_bills
                text: ""
                size_hint_y: 0.1
            Label:
                text: 'Funds Remaining:'
                size_hint_y: 0.1
            Label:
                id: funds_remaining
                text: ""
                size_hint_y: 0.1
            Button:
                text: 'Enter Payment'
                size_hint_y: 0.1
                on_release: root.payment_button()
            Button:
                text: 'Enter Bill'
                size_hint_y: 0.1
                on_release: root.bill_button()
            Button:
                text: 'Amend Bills'
                size_hint_y: 0.1
                on_release:
            Button:
                text: 'Amend Incomes'
                size_hint_y: 0.1
                on_release: root.income_button()
        Button:
            text: 'Review Spending'
            size_hint_y: 0.1
            on_release: root.logout_button()